- op: add
  path: /spec/versions/name=v1alpha1/schema/openAPIV3Schema/properties/metadata/properties
  value:
    name:
      pattern: "^[a-z]([a-z0-9-]{0,29}[a-z0-9])?$"
      minLength: 1
      maxLength: 31 # half of max name length
      type: string
- op: add
  path: /spec/versions/name=v1alpha1/schema/openAPIV3Schema/properties/spec/properties/instances/oneOf
  value:
  - required: ["workspace"]
